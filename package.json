{
	"name": "wasm-wasi-c-example",
	"private": "true",
	"publisher": "qbane",
	"version": "0.1.0",
	"description": "C Example",
	"author": "MS",
	"license": "MIT",
	"engines": {
		"vscode": "^1.77.0"
	},
	"main": "./dist/desktop/extension.js",
	"browser": "./dist/web/extension.js",
	"types": "./types.d.ts",
	"activationEvents": [],
	"files": [
		"als.wasm",
		"dist/",
		"vscode-wasm/wasm-wasi-core/package.json",
		"vscode-wasm/wasm-wasi-core/dist/*/mainWorker.js*",
		"vscode-wasm/wasm-wasi-core/dist/*/threadWorker.js*"
	],
	"contributes": {
		"commands": [
			{
				"command": "wasm-wasi-c-example.run",
				"category": "WASM Example",
				"title": "Activate Agda Language Server"
			}
		]
	},
	"devDependencies": {
		"@types/node": "^22.15.30",
		"@types/vscode": "^1.77.0",
		"esbuild": "^0.25.5",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@agda-web/wasm-wasi-core": "file:vscode-wasm/wasm-wasi-core",
		"@vscode/wasm-wasi": "^1.0.1",
		"@vscode/wasm-wasi-lsp": "^0.1.0-pre.8",
		"vscode-languageclient": "^10.0.0-next.12"
	},
	"scripts": {
		"build": "npm run compile:ts && npm run build:wasi && npm run esbuild",
		"compile:ts": "tsc -p tsconfig.json",
		"build:wasi": "zig cc -target wasm32-wasi hello.c -o ./hello.wasm",
		"build:core": "./build-core.sh",
		"esbuild": "node ./bin/esbuild.js"
	}
}
